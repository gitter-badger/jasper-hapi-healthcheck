{
  "name": "jasper-hapi-healthcheck",
  "version": "0.0.1",
  "description": "healthcheck endpoint for hapi servers",
  "main": "lib/index.js",
  "scripts": {
    "audit": "nsp check",
    "compile": "rimraf lib && babel src --out-dir lib --source-maps inline",
    "compile:watch": "rimraf lib && babel src --watch --out-dir lib --source-maps inline",
    "deploy": "npm run compile && npm publish",
    "dev": "npm run compile:watch & sleep 10 && nodemon --watch lib lib/index.js | pino",
    "lint": "standard \"src/**/*.js\"",
    "package": "npm shrinkwrap --dev && node bin/fix-shrinkwrap && shrinkpack",
    "pretest": "npm run lint",
    "pretest:unit": "npm run lint",
    "test": "istanbul cover ava",
    "test:watch": "istanbul cover ava -- --watch",
    "test:coverage": "npm test && codeclimate-test-reporter < coverage/lcov.info",
    "test:unit": "ava -- --match \"*.unit.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jasper-ai/jasper-hapi-healthcheck.git"
  },
  "keywords": [
    "jasper",
    "hapi",
    "healthcheck"
  ],
  "author": "kurtiskemple@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasper-ai/jasper-hapi-healthcheck/issues"
  },
  "homepage": "https://github.com/jasper-ai/jasper-hapi-healthcheck#readme",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.0.14",
    "babel-register": "^6.11.6",
    "codeclimate-test-reporter": "^0.3.3",
    "istanbul": "^1.0.0-alpha.2",
    "nodemon": "^1.8.1",
    "nsp": "^2.6.1",
    "rimraf": "^2.5.4",
    "shrinkpack": "^0.13.1",
    "standard": "^7.1.2"
  },
  "optionalDependencies": {
    "fsevents": "^1.0.0"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "failFast": true,
    "tap": true,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
}
